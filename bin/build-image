#!/bin/sh -eux

TAG_PREFIX="${1:?"The tag prefix"}"
BONDI_VER="${2:?"The version of bondi to install"}"
VERSION="${3:?"The suffix to mark the version"}"

TAG1="${TAG_PREFIX}-${BONDI_VER}"
TAG2="${TAG1}-${VERSION}"

docker pull "${TAG1}" || true

docker build \
  --cache-from "${TAG1}" \
  --tag "${TAG1}" \
  --tag "${TAG2}" \
  --build-arg "BONDI_VER=${BONDI_VER}" \
  .
